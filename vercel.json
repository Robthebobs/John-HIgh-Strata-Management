{
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.6.0"
    }
  },
  "routes": [
    { "src": "/document-upload", "dest": "/public/document-upload.php" },
    { "src": "/api/auth.php", "dest": "/api/auth.php" },
    { "src": "/api/(.*).php", "dest": "/api/$1.php" },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ],
  "env": {
    "SUPABASE_URL": "SUPABASE_URL",
    "SUPABASE_ANON_KEY": "SUPABASE_ANON_KEY"
  }
} 