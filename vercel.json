{
  "functions": {
    "api/php/**/*.php": {
      "runtime": "vercel-php@0.6.0"
    },
    "public/**/*.php": {
      "runtime": "vercel-php@0.6.0"
    }
  },
  "routes": [
    { "src": "/login", "dest": "/public/login.php" },
    { "src": "/document-upload", "dest": "/public/document-upload.php" },
    { "src": "/api/auth", "dest": "/api/php/supabase-auth.php" },
    { "src": "/api/upload", "dest": "/api/php/upload.php" },
    { "src": "/api/(.*).php", "dest": "/api/php/$1.php" },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ],
  "env": {
    "SUPABASE_URL": "SUPABASE_URL",
    "SUPABASE_ANON_KEY": "SUPABASE_ANON_KEY"
  }
} 